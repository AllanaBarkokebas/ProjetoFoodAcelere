<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="BottomNavigation">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorSecondary">@color/colorGrey</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorWhite</item>
    </style>

    <style name="AppTheme_Button_Tab_bar" parent="Theme.AppCompat.DayNight">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme_Tab_Bar_Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:tabStripEnabled">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


</resources>
