<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backlogin"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ui.features.recovery.ForgotPasswordActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/toolbar" />
    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:id="@+id/lblSendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o e-mail cadastrado"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout3" />

    <EditText
        android:id="@+id/editForgotEmail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/edittext_resister"
        android:hint="E-mail"
        android:imeOptions="actionNext"
        android:layout_marginTop="16dp"
        android:inputType="textEmailAddress"
        android:maxLength="40"
        android:maxLines="1"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="#c0c0c0"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSendEmail" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Enviar"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editForgotEmail" />


</androidx.constraintlayout.widget.ConstraintLayout>