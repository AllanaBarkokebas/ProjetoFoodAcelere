<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.tabs.TabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_tablelayout"
    style="@style/AppTheme_Button_Tab_bar"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    app:tabBackground="@drawable/button_top_tab_bar"
    app:tabContentStart="40dp"
    app:tabGravity="fill"
    app:tabIndicator="@android:color/transparent"
    app:tabIndicatorColor="@android:color/transparent"
    app:tabIndicatorFullWidth="false"
    app:tabInlineLabel="false"
    app:tabMode="scrollable"
    app:tabRippleColor="@android:color/transparent"
    app:tabSelectedTextColor="@color/colorWhite"
    app:tabTextAppearance="@style/AppTheme_Tab_Bar_Text"
    app:tabUnboundedRipple="true" />